                  $(OT_USE_INTERTRAX)
                
OT_OPTIONAL_LIB = $(OT_ARTOOLKIT_LIB)
               
##
OT_STD_INCLUDES = -I. -I$(OT_INC_DIR) -I$(ACE_ROOT) -I$(XERCESC_ROOT)/include \
                  -I$(OT_DIR)/extras/intersense/unix


## ---------------------------------------------------------------------------
## COMMON RULES
## ---------------------------------------------------------------------------

## Always unsatisfied target
_FORCE = _force

cleanhere: $(_FORCE)
	-rm -f *.o *.so *.a *.i core Makedepend so_locations
	-rm -f *.ilk *.pch *.sbr *.exp
	-rm -f *.ncb *.dll *.lib *.obj *.opt *.plg
	-rm -f */*.ilk */*.pch */*.sbr */*.exp
	-rm -f */*.ncb */*.dll */*.lib */*.obj */*.opt */*.plg
	-rm -f *~ *.bak \#* .cghead~ *.\$$\$$\$$
	-rm -rf .deps *Win32_Debug* *Win32_Release* ii_files

clean: cleanhere
	@if test "x$(SUBDIRS)" != "x" ; then \
	  temp="$(SUBDIRS)" ; \
	  for i in $$temp ; do \
	    echo "--- $$i ---" ; \
	    ( cd $$i && $(MAKE) $(NOPRINT) clean ) || exit 1 ; \
	  done ; \
	fi 

clobberhere: $(_FORCE)
	@if test "x$(TARGETS)" != "x" ; then \
	  rm -f $(TARGETS) ; \
	  temp="$(TARGETS)" ; \
	  for i in $$temp ; do \
	    base=`dirname $$i`/`basename $$i .so` ; \
	    rm -f $$base.dll $$base.ilk $$base.exe ; \
	  done ; \
	fi 

clobber: cleanhere clobberhere
	@if test "x$(SUBDIRS)" != "x" ; then \
	  temp="$(SUBDIRS)" ; \
	  for i in $$temp ; do \
	    echo "--- $$i ---" ; \
	    ( cd $$i && $(MAKE) $(NOPRINT) clobber ) || exit 1 ; \
	  done ; \
	fi 

_force:

