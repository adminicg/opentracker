<!DOCTYPE OpenTracker SYSTEM "../../../workspace/opentracker.dtd">
<!--
  Simulates gps input via keyboard. Use station 0 to control position and orientation of the user.
   
  $Id: gpskey.xml 3427 2004-07-14 12:20:49Z tamer $
  -->
<OpenTracker>
  <configuration>
    <NetworkSinkConfig name="GPSServer"/>
    <ConsoleConfig headerline="GPS Keyboard" interval="1" display="on"/>
    <TimeConfig sleep="10"/>
  </configuration>
  <!-- Transmits GPS data on the network -->
  <NetworkSink name="gps" number="1" multicast-address="224.100.200.101" port="2000" interface="127.0.0.1">
    <Merge>
      <MergePosition>
        <ConsoleSource DEF="source" number="0"/>
      </MergePosition>
    </Merge>
  </NetworkSink>
  <!-- Transmits orientation data on the network -->
  <NetworkSink name="rot" number="2" multicast-address="224.100.200.101" port="2000" interface="127.0.0.1">
    <Merge>
      <MergeOrientation>
        <Ref USE="source"/>
      </MergeOrientation>
    </Merge>
  </NetworkSink>
  <!-- Output data on the console -->
  <ConsoleSink comment="Tracker" active="on">
    <Ref USE="source"/>
  </ConsoleSink>
</OpenTracker>
