<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE OpenTracker SYSTEM "../../workspace/opentracker.dtd">
<OpenTracker>
  <configuration>
    <ARToolKitConfig camera-parameter="../mobile/data/firefly_4mm.dat" treshhold="100" framerate="15" videomode="videoWidth=320,videoHeight=240,showDlg" videolinuxmode="-mode=320x240_YUV422"/>
    <ConsoleConfig headerline="H323 Local" interval="1" curses="off"/>
    <TimeConfig display="true" sleep="10"/>
  </configuration>
  <StbSink station="0" event="on">
    <ConsoleSink comment="0">
      <EventDynamicTransform baseevent="true">
        <EventTransform scale="0 0 1" rotationtype="matrix" rotation="1 0 0 0 0 -1 0 1 0">
          <StbMouseSource DEF="mouseinput" mode="relative" window="0"/>
        </EventTransform>
        <TransformBase>
          <StbKeyboardSource number="0"/>
        </TransformBase>
      </EventDynamicTransform>
    </ConsoleSink>
  </StbSink>

  <StbSink station="1">
    <EventTransform scale="1 0 0">
      <Ref USE="mouseinput"/>
    </EventTransform>
  </StbSink>

  <StbSink station="2">
    <ConsoleSink comment="2">
      <StbKeyboardSource number="2"/>
    </ConsoleSink>
  </StbSink>

  <StbSink station="3">
    <ConsoleSink comment="3">
      <StbKeyboardSource number="3"/>
    </ConsoleSink>
  </StbSink>

  <StbSink station="4">
    <ConsoleSink comment="4">
      <StbKeyboardSource number="4"/>
    </ConsoleSink>
  </StbSink>

  <ConsoleSink comment="artool">
    <ARToolKitSource center="0 0" size="50 50" tag-file="data/hiro.patt" DEF="PI"/>
  </ConsoleSink>
</OpenTracker>
