<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE OpenTracker SYSTEM "../../../../../../workspace/opentracker.dtd">

<OpenTracker>

    <configuration>
        <ARToolKitConfig camera-parameter="firefly_istvan.dat" videomode="inputDevive=WDM_CAP,videoWidth=640,videoHeight=480" framerate="100" treshhold="100"/>
        <ConsoleConfig headerline="Monkeybridge distributed desktop tracker - user1" interval="1" display="on"/>
        <!--TimeConfig display="true"/-->
    </configuration>

    <!-- playfield pose calibration -->
    <StbSink station="0" event="on">
        <ConsoleSink comment="playfield_pose_calibration" active="on" DEF="PLAYFIELD_POSE1">
            <EventDynamicTransform baseevent="true">
                <StbKeyboardSource number="0"/>
                <TransformBase>
                    <EventVirtualTransform rotationtype="axisangle" rotation="1 0 0 1.57079633">
                        <EventTransform scale="0.001 0.001 0.001" rotation="1 0 0 0">
                            <ARToolKitSource center="0 0" size="900 900" tag-file="4x4_f.patt"/>
                        </EventTransform>
                    </EventVirtualTransform>
                </TransformBase>
            </EventDynamicTransform>
        </ConsoleSink>
    </StbSink>

    <!-- first interaction marker -->
    <StbSink station="1" event="on">
        <ConsoleSink comment="cursor0" active="on">
            <EventDynamicTransform baseevent="true">
                <Ref USE="PLAYFIELD_POSE1"/>
                <TransformBase>
                    <NetworkSource number="1" multicast-address="224.15.15.15" port="12345"/>
                </TransformBase>
            </EventDynamicTransform>
        </ConsoleSink>
    </StbSink>

    <!-- second interaction marker -->
    <StbSink station="2" event="on">
        <ConsoleSink comment="cursor1" active="on" DEF="USER_MARKER1">
            <EventVirtualTransform rotationtype="axisangle" rotation="1 0 0 1.57079633">
                <EventTransform scale="0.001 0.001 0.001" rotation="1 0 0 0">
                    <ARToolKitSource center="0 0" size="140 140" tag-file="4x4_d.patt"/>
                </EventTransform>
            </EventVirtualTransform>
        </ConsoleSink>
    </StbSink>
    <!-- second interaction marker's relative pose to playfield pose - send over via network -->
    <NetworkSink name="cursor_nw_sink" number="1" multicast-address="224.15.15.15" port="12346">
        <EventDynamicTransform baseevent="true">
            <Ref USE="USER_MARKER1"/>
            <TransformBase>
                <EventInvertTransform>
                    <Ref USE="PLAYFIELD_POSE1"/>
                </EventInvertTransform>
            </TransformBase>
        </EventDynamicTransform>
    </NetworkSink>

    <!-- fix camera position -->
    <StbSink station="3" event="on">
        <ConsoleSink comment="camera_position" active="on">
            <TestSource position="0 0 0"/>
        </ConsoleSink>
    </StbSink>

</OpenTracker>
