<!--simple test configuration for the new tracker serve system-->
<!DOCTYPE OpenTracker SYSTEM "..\..\..\..\workspace\opentracker.dtd">
<OpenTracker>
  <configuration>
    <ARToolKitConfig camera-parameter="../../../../workspace/data/webcam.dat" videomode="inputDevive=WDM_CAP" framerate="100" treshhold="100"/>
    <ConsoleConfig headerline="Desktop Tracking" interval="1" display="off"/>
    <TimeConfig display="true"/>
  </configuration>
  <StbSink station="0">
    <ConsoleSink comment="pen">
      <StbKeyboardSource number="0"/>
    </ConsoleSink>
  </StbSink>
  <StbSink station="1">
    <ConsoleSink comment="pip">
      <StbKeyboardSource number="1"/>
    </ConsoleSink>
  </StbSink>
  <StbSink station="2">
    <TestSource frequency="1" position="0 0 0.5"/>
  </StbSink>
  <StbSink station="3">
    <ConsoleSink comment="marker">
      <EventVirtualPositionTransform translation="0 0 0">
        <EventVirtualOrientationTransform rotation="0.5 0.5 0.5 0.5">
          <EventTransform scale="0.001 0.001 0.001" rotation="1 0 0 0" translation="0 0 0.5">
            <ARToolKitSource center="0 0" size="80 80" tag-file="../apps/arpuppet/data/hito.patt"/>
          </EventTransform>
        </EventVirtualOrientationTransform>
      </EventVirtualPositionTransform>
    </ConsoleSink>
  </StbSink>
</OpenTracker>
