#Inventor V2.1 ascii

DEF PUPPETEERTEST1 SoApplicationKit {

    info Info {}

    appGeom Separator {
    }

    contextKit SoContextKit {

        clonePipSheet  FALSE

        templatePipSheet Separator {

            Separator {
                RotationXYZ {axis  X angle 1.57 }
                Material { diffuseColor 1 0 0 }
                DEF BUTTON_SEND SoToggleButton { 
                    width 5 depth 5 height 2 on FALSE
                }
            }

        } # end of templatePipSheet

        windowGroup Group {

            SoWindowKit {
            
                state MAXIMIZED
                clientVolume Separator {
                
                    DEF SOCKET SoSocketModule { # mode is SERVER by default
                        port 55555
                        in = SoGate {
                            type SoMFString
                            enable FALSE
                            input ["Server, port 55555", "Test1"]
                            trigger = USE BUTTON_SEND.on
                        }.output
                    }
                    
                    Separator {
                        Material { diffuseColor 1 1 1 }
                        Transform { translation 0.1 0.1 0 scaleFactor 0.01 0.01 0.01 }
                        SoText3 {
                            parts ALL
                            string = USE SOCKET.out
                        }
                    }

                } # end of clientVolume

            } # end of windowKit

        } # end of windowGroup

    } # end of contextKit

} # end of applicationKit
