#Inventor V2.1 ascii

DEF PUPPETEERTEST1 SoApplicationKit {

    contextKit SoContextKit {

        clonePipSheet FALSE

        templatePipSheet Separator {

            Separator {
                RotationXYZ {axis  X angle 1.57 }
                Material { diffuseColor 1 0 0 }
                DEF BUTTON_SEND SoToggleButton { 
                    width 1 depth 1 height 0.4 on FALSE
                }
            }

        } # end of templatePipSheet

        windowGroup Group {

            SoWindowKit {
            
                state MAXIMIZED
                clientVolume Separator {
                
                    DEF SOCKET SoSocketModule { # address is "localhost" by default
                        port 55555
                        mode CLIENT
                        in = SoGate {
                            type SoMFString
                            enable FALSE
                            input ["Client, port 55555", "Test1"]
                            trigger = USE BUTTON_SEND.on
                        }.output
                    }
                    
                    Separator {
                        Material { diffuseColor 0 1 0 }
                        Transform { translation 0.1 0.1 0 scaleFactor 0.01 0.01 0.01 }
                        SoText3 {
                            parts ALL
                            string = USE SOCKET.out
                        }
                    }
                    
                } # end of clientVolume

            } # end of windowKit

        } # end of windowGroup

    } # end of contextKit

} # end of applicationKit
