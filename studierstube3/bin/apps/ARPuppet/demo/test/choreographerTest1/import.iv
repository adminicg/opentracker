#Inventor V2.1 ascii

Separator {

    SoClassLoader {
        className   "SoFacePuppeteer"
        fileName    "../apps/arpuppet/characters/facePuppet/facePuppetd"
    }

    DEF TALKINGHEAD SoFacePuppeteer{
        id "sam"
        controlMode [ (STATION) , (STATION) ]
        showPuppeteer TRUE
        showAttributes TRUE
        whichPuppets [ 1 ]
        whichAttributes [ 1 ]
        dataNeedsValidation FALSE
        puppets SoDragKit {
            content Separator {
                SoMultiSwitch {
                    DEF PUPPET1 SoFacePuppet{
                        character "mike"
                    }
                    DEF PUPPET2 SoFacePuppet{
                        character "sam"
                    }
                }
            }
        } # end of puppets
        attributes SoMultiSwitch {
            SoSeparator {
                SoSeparator {
                    SoTransform { translation -0.2 0.2 0 scaleFactor 0.003 0.003 0.003 }
                    SoText3 { 
                        parts ALL
                        string = USE PUPPET1.speechText
                    }
                }
                SoSeparator {
                    SoTransform { translation -0.2 0.25 0 scaleFactor 0.003 0.003 0.003 }
                    SoText3 { 
                        parts ALL
                        string = USE PUPPET1.character
                    }
                }
            }
            SoSeparator {
                SoSeparator {
                    SoTransform { translation -0.2 0.2 0 scaleFactor 0.003 0.003 0.003 }
                    SoText3 { 
                        parts ALL
                        string = USE PUPPET2.speechText
                    }
                }
                SoSeparator {
                    SoTransform { translation -0.2 0.25 0 scaleFactor 0.003 0.003 0.003 }
                    SoText3 { 
                        parts ALL
                        string = USE PUPPET2.character
                    }
                }
            }
        } # end of attributes

    } # end of SoFacePuppeteer

}
