<!--simple test configuration for the new tracker serve system-->
<!DOCTYPE OpenTracker SYSTEM "../../../../../workspace/opentracker.dtd">
<OpenTracker>
  <configuration>
    <ARToolKitConfig camera-parameter="firefly_4mm.dat" videomode="inputDevive=WDM_CAP" framerate="100" treshhold="100"/>
    <ConsoleConfig headerline="Receiver Test" interval="1" display="off"/>
    <TimeConfig display="true"/>
  </configuration>
  <StbSink station="0">
    <ConsoleSink comment="pen">       
       <EventTransform scale="0.6 -0.4 0">
       <EventVirtualTransform translation="-0.5 -0.5 0">
         <StbMouseSource mode="relative" window="1"/>
       </EventVirtualTransform>
       </EventTransform>       
    </ConsoleSink>
  </StbSink>
  <StbSink station="1">
    <ConsoleSink comment="pip">
      <EventTransform translation="0 0.1 -0.02" rotation="0.707 0 0 0.707">
        <StbKeyboardSource number="0"/>
      </EventTransform>
    </ConsoleSink>
  </StbSink>
  <StbSink station="2">
    <TestSource frequency="1" position="0 0 0.5"/>
  </StbSink>
  <StbSink station="3">
    <ConsoleSink comment="legorobot" DEF="transform">
      <EventDynamicTransform baseevent="true">
        <StbKeyboardSource number="1"/>
        <TransformBase>
          <EventVirtualOrientationTransform rotation="0.5 0.5 0.5 0.5">
          <EventVirtualOrientationTransform rotation="0 0 -0.707 0.707">
            <EventTransform scale="0.001 0.001 0.001" rotation="1 0 0 0">
              <ARToolKitSource center="0 0" size="80 80" tag-file="../apps/ARPuppet/demo/test/legoPuppetTest1/hito.patt" DEF="LA"/>
            </EventTransform>
          </EventVirtualOrientationTransform>
          </EventVirtualOrientationTransform>
        </TransformBase>
      </EventDynamicTransform>
    </ConsoleSink>
  </StbSink>
  <StbSink station="4">
    <EventDynamicTransform baseevent="true">
        <StbKeyboardSource number="2"/>
        <TransformBase>
            <Ref USE="transform"/>
        </TransformBase>
    </EventDynamicTransform>
  </StbSink>
</OpenTracker>
