<xsd:schema targetNamespace="http://www.expersite.com/AEKI" xmlns="http://www.expersite.com/AEKI" xmlns:xsd="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified">
  <xsd:element name="furniture">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element ref="component" maxOccurs="unbounded"/>
        <xsd:element ref="assembly"/>
      </xsd:sequence>
    </xsd:complexType>
    <xsd:key name="ComponentInstanceKey">
      <xsd:selector xpath="component/instance"/>
      <xsd:field xpath="@name"/>
    </xsd:key>
    <xsd:key name="ConnectorKey">
      <xsd:selector xpath="component/connector"/>
      <xsd:field xpath="@name"/>
    </xsd:key>
  </xsd:element>
  <xsd:element name="component">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element ref="shape"/>
        <xsd:element name="dimension" type="size3f"/>
        <xsd:element ref="connector" minOccurs="0" maxOccurs="unbounded"/>
        <xsd:element name="instance" minOccurs="0" maxOccurs="unbounded">
          <xsd:complexType>
            <xsd:attribute name="name" type="xsd:string" use="required"/>
            <xsd:attribute name="tracker" use="optional">
              <xsd:simpleType>
                <xsd:restriction base="xsd:int">
                  <xsd:minInclusive value="1"/>
                </xsd:restriction>
              </xsd:simpleType>
            </xsd:attribute>
          </xsd:complexType>
        </xsd:element>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>
  <xsd:element name="shape">
    <xsd:complexType>
      <xsd:choice>
        <xsd:element ref="cube"/>
      </xsd:choice>
    </xsd:complexType>
  </xsd:element>
  <xsd:element name="cube">
    <xsd:complexType>
      <xsd:all>
        <xsd:element name="rounded" minOccurs="0">
          <xsd:complexType>
            <xsd:all>
              <xsd:element name="radius">
                <xsd:simpleType>
                  <xsd:restriction base="xsd:double">
                    <xsd:minInclusive value="0"/>
                  </xsd:restriction>
                </xsd:simpleType>
              </xsd:element>
            </xsd:all>
          </xsd:complexType>
        </xsd:element>
      </xsd:all>
    </xsd:complexType>
  </xsd:element>
  <xsd:element name="connector">
    <xsd:complexType>
      <xsd:complexContent>
        <xsd:extension base="coord3f">
          <xsd:attribute name="name" type="xsd:string" use="required"/>
        </xsd:extension>
      </xsd:complexContent>
    </xsd:complexType>
  </xsd:element>
  <xsd:element name="assembly">
    <xsd:complexType>
      <xsd:choice minOccurs="0" maxOccurs="unbounded">
        <xsd:element name="rotate">
          <xsd:complexType>
            <xsd:attribute name="axis" use="required">
              <xsd:simpleType>
                <xsd:restriction base="xsd:string">
                  <xsd:enumeration value="xpos"/>
                  <xsd:enumeration value="xneg"/>
                  <xsd:enumeration value="zpos"/>
                  <xsd:enumeration value="zneg"/>
                </xsd:restriction>
              </xsd:simpleType>
            </xsd:attribute>
            <xsd:attribute name="angle" use="required">
              <xsd:simpleType>
                <xsd:restriction base="xsd:int">
                  <xsd:enumeration value="90"/>
                  <xsd:enumeration value="180"/>
                  <xsd:enumeration value="270"/>
                </xsd:restriction>
              </xsd:simpleType>
            </xsd:attribute>
          </xsd:complexType>
        </xsd:element>
        <xsd:element name="add-component">
          <xsd:complexType>
            <xsd:sequence minOccurs="0">
              <xsd:element name="connect" minOccurs="3" maxOccurs="unbounded">
                <xsd:complexType>
                  <xsd:sequence>
                    <xsd:element name="connector-ref">
                      <xsd:complexType>
                        <xsd:attribute name="name" type="xsd:string" use="required"/>
                      </xsd:complexType>
                      <xsd:keyref name="ConnectorKeyRef1" refer="ConnectorKey">
                        <xsd:selector xpath="."/>
                        <xsd:field xpath="@name"/>
                      </xsd:keyref>
                    </xsd:element>
                    <xsd:element name="connector-ref">
                      <xsd:complexType>
                        <xsd:attribute name="name" type="xsd:string" use="required"/>
                        <xsd:attribute name="componentRef" type="xsd:string" use="optional"/>
                      </xsd:complexType>
                      <xsd:keyref name="ConnectorKeyRef2" refer="ConnectorKey">
                        <xsd:selector xpath="."/>
                        <xsd:field xpath="@name"/>
                      </xsd:keyref>
                      <xsd:keyref name="ComponentInstanceKeyRef2" refer="ComponentInstanceKey">
                        <xsd:selector xpath="."/>
                        <xsd:field xpath="@componentRef"/>
                      </xsd:keyref>
                    </xsd:element>
                  </xsd:sequence>
                </xsd:complexType>
              </xsd:element>
            </xsd:sequence>
            <xsd:attribute name="name" type="xsd:string" use="required"/>
          </xsd:complexType>
          <xsd:keyref name="ComponentInstanceKeyRef1" refer="ComponentInstanceKey">
            <xsd:selector xpath="."/>
            <xsd:field xpath="@name"/>
          </xsd:keyref>
        </xsd:element>
      </xsd:choice>
      <xsd:attribute name="componentName" type="xsd:IDREF"/>
    </xsd:complexType>
  </xsd:element>
  <xsd:simpleType name="unit">
    <xsd:restriction base="xsd:string">
      <xsd:enumeration value="mm"/>
      <xsd:enumeration value="cm"/>
      <xsd:enumeration value="dm"/>
      <xsd:enumeration value="m"/>
    </xsd:restriction>
  </xsd:simpleType>
  <xsd:complexType name="coord3f">
    <xsd:all>
      <xsd:element name="x" type="xsd:float"/>
      <xsd:element name="y" type="xsd:float"/>
      <xsd:element name="z" type="xsd:float"/>
    </xsd:all>
    <xsd:attribute name="unit" type="unit" use="required"/>
  </xsd:complexType>
  <xsd:complexType name="size3f">
    <xsd:all>
      <xsd:element name="width">
        <xsd:simpleType>
          <xsd:restriction base="xsd:float">
            <xsd:minExclusive value="0"/>
          </xsd:restriction>
        </xsd:simpleType>
      </xsd:element>
      <xsd:element name="height">
        <xsd:simpleType>
          <xsd:restriction base="xsd:float">
            <xsd:minExclusive value="0"/>
          </xsd:restriction>
        </xsd:simpleType>
      </xsd:element>
      <xsd:element name="depth">
        <xsd:simpleType>
          <xsd:restriction base="xsd:float">
            <xsd:minExclusive value="0"/>
          </xsd:restriction>
        </xsd:simpleType>
      </xsd:element>
    </xsd:all>
    <xsd:attribute name="unit" type="unit" use="required"/>
  </xsd:complexType>
  <xsd:complexType name="vec3f">
    <xsd:all>
      <xsd:element name="x" type="xsd:float"/>
      <xsd:element name="y" type="xsd:float"/>
      <xsd:element name="z" type="xsd:float"/>
    </xsd:all>
  </xsd:complexType>
</xsd:schema>
