<!DOCTYPE OpenTracker SYSTEM "../../workspace/opentracker.dtd">
<OpenTracker>
  <configuration>
    <NetworkSinkConfig name="Soundtable Tracker" /> 
    <ARToolKitConfig camera-parameter="data/camera_para_logitech" videomode="0 640 480" framerate="15" treshhold="100"/>
    <ConsoleConfig headerline="Soundtable Tracker" interval="10"/>
    <TimeConfig sleep="10" />
  </configuration>
  <!-- actual marker tracking -->
  <EventTransform DEF="marker1">
    <ConfidenceFilter treshhold="0.7">
      <EventTransform scale="0.001 0.001 0.001" rotation="1 0 0 0">
        <ARToolKitSource tag-file="data/sound1.tag" center="0 0" size="150"/>
      </EventTransform>
    </ConfidenceFilter>
  </EventTransform>
  <EventTransform DEF="marker2">
    <ConfidenceFilter treshhold="0.7">
      <EventTransform scale="0.001 0.001 0.001" rotation="1 0 0 0">
        <ARToolKitSource tag-file="data/sound2.tag" center="0 0" size="150"/>
      </EventTransform>
    </ConfidenceFilter>
  </EventTransform>
  <EventTransform DEF="marker3">
    <ConfidenceFilter treshhold="0.7">
      <EventTransform scale="0.001 0.001 0.001" rotation="1 0 0 0">
        <ARToolKitSource tag-file="data/sound3.tag" center="0 0" size="150"/>
      </EventTransform>
    </ConfidenceFilter>
  </EventTransform>
  <EventTransform DEF="marker4">
    <ConfidenceFilter treshhold="0.7">
      <EventTransform scale="0.001 0.001 0.001" rotation="1 0 0 0">
        <ARToolKitSource tag-file="data/sound4.tag" center="0 0" size="150"/>
      </EventTransform>
    </ConfidenceFilter>
  </EventTransform>
  <EventTransform DEF="marker5">
    <ConfidenceFilter treshhold="0.7">
      <EventTransform scale="0.001 0.001 0.001" rotation="1 0 0 0">
        <ARToolKitSource tag-file="data/sound5.tag" center="0 0" size="150"/>
      </EventTransform>
    </ConfidenceFilter>
  </EventTransform>
  <!-- test tracking with permanent event generation and keyboard control -->
  <!--
  <ConsoleSource number="0" DEF="marker1"/>
    <ConsoleSource number="1" DEF="marker2"/>
    <ConsoleSource number="2" DEF="marker3"/>
    <ConsoleSource number="3" DEF="marker4"/>
    <ConsoleSource number="4" DEF="marker5"/>
    -->
  <!-- putting the markers out on the network -->
  <ConsoleSink comment="App 1">
    <NetworkSink name="app1" number="0" multicast-address="224.100.200.100" port="12345">
      <Ref USE="marker1"/>
    </NetworkSink>
  </ConsoleSink>
  <ConsoleSink comment="App 2">
    <NetworkSink name="app2" number="1" multicast-address="224.100.200.100" port="12345">
      <Ref USE="marker2"/>
    </NetworkSink>
  </ConsoleSink>
  <ConsoleSink comment="App 3">
    <NetworkSink name="app3" number="2" multicast-address="224.100.200.100" port="12345">
      <Ref USE="marker3"/>
    </NetworkSink>
  </ConsoleSink>
  <ConsoleSink comment="App 4">
    <NetworkSink name="app4" number="3" multicast-address="224.100.200.100" port="12345">
      <Ref USE="marker4"/>
    </NetworkSink>
  </ConsoleSink>
  <ConsoleSink comment="App 5">
    <NetworkSink name="app5" number="4" multicast-address="224.100.200.100" port="12345">
      <Ref USE="marker5"/>
    </NetworkSink>
  </ConsoleSink>
</OpenTracker>
