#Inventor V2.1 ascii

DEF PickerApp SoApplicationKit {

    contextKit  SoContextKit {
    
        templatePipSheet Separator {
            RotationXYZ {axis  X angle 1.57 }
            DEF TEST_BUTTON SoToggleButton { 
                width 5 depth 5 height 2 
            }
        }

        windowGroup Group {  
            DEF Test Separator {
            # SoTranslation { translation 0 0 -1 } 
                SoDragKit {
                    stations 4
                    blocked FALSE
                    eventMask BM_ALL_EVENTS
                    translation 0 0 -1
                    content Separator {
                        Material { diffuseColor 0.9 0.2 0.9 }                
                        Sphere { radius 0.1 }
                    }
                    highlightedContent Separator {
                        Material { diffuseColor 0.9 0.9 0.2 }
                        Sphere { radius 0.1 }
                    }
                }
            }
            DEF RAYPICK SoRayPicker {
                nearDistance 0
                farDistance -1
                radius 1.0
                stations 0
                stationPosition 0 0 0
                stationOrientation 0 0 0 0
                timeOut 0
                active TRUE
                mode STICK
                input POSE
                content Separator {
                    Material { diffuseColor 0.9 0.2 0.2 }
                    Cylinder { radius 0.004 }
                }
                pickGraph NULL 
           }
       }    
       clonePipSheet FALSE
    }
}
