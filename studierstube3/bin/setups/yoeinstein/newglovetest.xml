<?xml version="1.0" encoding="UTF-8"?>
<!--simple test configuration for the new tracker serve system-->
<!DOCTYPE OpenTracker SYSTEM "..\..\workspace\opentracker.dtd">
<OpenTracker>
  <configuration>
    <ARToolKitConfig camera-parameter="firefly_4mm.dat" videomode="WDM_CAP,videoWidth=640,videoHeight=480" framerate="15" treshhold="100" pattern-dir="../mobile/data"/>
    <ConsoleConfig headerline="New Glove Test" interval="10"/>
    <TimeConfig display="true" sleep="10"/>
  </configuration>
  <!-- Gloves tracking -->
   <ConsoleSink comment="glove_r">
    <EventVirtualTransform translation="0 0 0" DEF="calibOffsetR">
      <Merge>
        <MergeDefault>
        <ConsoleSink comment="marker 1">
          <EventVirtualPositionTransform translation="0 0 0">
          <EventVirtualOrientationTransform rotation="0 0 0.707107 0.707107">
            <EventTransform scale="0.001 0.001 0.001" rotation="1 0 0 0" translation="0 0 0">
              <ConfidenceFilter treshhold="0.7">              
              <ARToolKitSource center="0 0" size="50" tag-file="glove1.patt"/>            
              </ConfidenceFilter>
              </EventTransform>
              </EventVirtualOrientationTransform>
          </EventVirtualPositionTransform>
          </ConsoleSink>
          <ConsoleSink comment="marker 2">
          <EventVirtualTransform translation="0.0468 -0.03 -0.054" rotation="0 0.707107 0 0.707107">
            <EventVirtualOrientationTransform rotation="0 0 0 1">
              <EventTransform scale="0.001 0.001 0.001" rotation="1 0 0 0" translation="0 0 0">
              <ConfidenceFilter treshhold="0.7">
                <ARToolKitSource center="0 0" size="50" tag-file="glove2.patt"/>
                </ConfidenceFilter>
              </EventTransform>
            </EventVirtualOrientationTransform>
          </EventVirtualTransform>
          </ConsoleSink>
          <ConsoleSink comment="marker 3">
          <EventVirtualTransform translation="-0.0128 -0.0322 -0.084" rotation="0 1 0 0">
            <EventVirtualOrientationTransform rotation="0 0 0.707107 0.707107">
              <EventTransform scale="0.001 0.001 0.001" rotation="1 0 0 0" translation="0 0 0">
              <ConfidenceFilter treshhold="0.7">
                <ARToolKitSource center="0 0" size="50" tag-file="glove3.patt"/>
                </ConfidenceFilter>
              </EventTransform>
            </EventVirtualOrientationTransform>
          </EventVirtualTransform>
          </ConsoleSink>
        </MergeDefault>
        
        <MergeButton>
          <ButtonFilter buttonmask="11110000" buttonmap="01234567">
            <ParButtonSource dev="0x378" DEF="buttons"/>
          </ButtonFilter>
        </MergeButton>
     
      </Merge>
    </EventVirtualTransform>
</ConsoleSink>
</OpenTracker>
