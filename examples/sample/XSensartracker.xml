<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE OpenTracker SYSTEM "..\..\studierstube\bin\workspace\opentracker.dtd">
<OpenTracker>
	<configuration>
		<ConsoleConfig headerline="Sample Tracking Input" interval="20"/>
	</configuration>
	
	<!-- This is the output of the Keyboard -->
	<ConsoleSink comment="Keyboard">
		<ConsoleSource number="0"/>
	</ConsoleSink>

	<!-- This is the output of the XSens inertial tracker. _DOES NOT_ need an XSenseConfig -->
	<ConsoleSink comment="XSens">
		<XSensSource comport="4"/>
	</ConsoleSink>
		
</OpenTracker>
