<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE OpenTracker SYSTEM "C:\Progra~1\stb\studierstube\bin\workspace\opentracker.dtd">
<OpenTracker>
	<configuration>
		<ARToolKitConfig camera-parameter="..\..\studierstube\bin\workspace\data\webcam.dat" videomode="showDlg" framerate="10" treshhold="100"/>
		<ConsoleConfig headerline="Sample Tracking Input" interval="20"/>
	</configuration>
	
	<!-- This is the output of the Keyboard -->
	<ConsoleSink comment="Keyboard">
		<ConsoleSource number="0"/>
	</ConsoleSink>

	<!-- This is the output of the ARToolkit -->
	<ConsoleSink comment="ARToolKit">
		<ARToolKitSource center="0 0" size="50 50" tag-file="..\..\studierstube\bin\apps\signpost\patt\pattern0"/>
	</ConsoleSink>
	
	<!-- This is the output of the XSens inertial tracker. _DOES NOT_ need an XSenseConfig -->
	<ConsoleSink comment="XSens">
		<XSensSource comport="1"/>
	</ConsoleSink>

	<!-- This is the output of the ARTrack Optical tracker -->
	<ConsoleSink comment="ARTrack">
	    <NetworkSource number="0" multicast-address="224.100.200.101" port="12346" />
	</ConsoleSink>
		
</OpenTracker>
