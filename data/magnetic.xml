<!--simple test configuration for the new tracker serve system-->
<!DOCTYPE OpenTracker SYSTEM "opentracker.dtd">
<OpenTracker>
	<configuration>
		<NetworkSinkConfig name="Network Integration"/>
		<ARToolKitConfig camera-parameter="../data/camera_para.dat"/>
		<ConsoleConfig headerline="Second Server"/>
	</configuration>
	<!-- Two markers to track each side of the pip, in the workstations users manual space -->
	<ConsoleSink comment="pip">
		<NetworkSink name="Pip" number="1" multicast-address="224.100.200.101" port="12346">
			<EventTransform translation="0.04 0 0.1">
				<EventVirtualTransform rotation="-0.70710678 0 0 0.70710678">
					<EventVirtualTransform rotation="0 0 -0.70710678 0.70710678">
						<MaxConfidenceFilter>
							<Transformation scale="0.001 0.001 0.001">
								<Marker tag-file="../data/corner.pat" vertex="-52 -52 52 -52 52 52 -52 52"/>
							</Transformation>
							<Transformation scale="0.001 0.001 0.001">
								<VirtualTransformation rotation="-0.705828 0.708361 0.00537149 0.00178251" rotationtype="quaternion">
									<Marker tag-file="../data/bigcorner.pat" vertex="-52 -52 52 -52 52 52 -52 52"/>
								</VirtualTransformation>
							</Transformation>
						</MaxConfidenceFilter>
					</EventVirtualTransform>
				</EventVirtualTransform>
			</EventTransform>
		</NetworkSink>
	</ConsoleSink>
	<!-- this station just puts the camera into the right position -->
	<CursesOutput comment="camera">
		<Station name="camera" number="2">
			<Transformation rotation="1 0 0 0">
				<TestSource/>
			</Transformation>
		</Station>
	</CursesOutput>
	<!-- this station tracks the pens data which is coming from the network and is provided by a magnetic tracker-->
	<CursesOutput comment="pen">
		<Station name="pen" number="3">
			<Transformation translation="0.1 0.1 0">
				<VirtualTransformation rotation="0.70710678 0 0 0.70710678">
					<Transformation translation="-0.2 -0.6 1" rotation="0 0 1 0">
						<NetworkSource number="6"/>
					</Transformation>
				</VirtualTransformation>
			</Transformation>
		</Station>
	</CursesOutput>
	<CursesOutput comment="head mounted display">
		<Station name="hmd" number="4">
			<Transformation translation="0.35 0.1 1.0">
				<NetworkSource number="2"/>
			</Transformation>
		</Station>
	</CursesOutput>
</OpenTracker>
