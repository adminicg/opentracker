<!--simple test configuration for the new tracker serve system-->
<!DOCTYPE TrackerServer SYSTEM "opentracker.dtd">
<OpenTracker>
	<configuration>
		<NetworkSinkConfig name="Super Duper Server" multicast-address="224.100.200.101" port="6666"/>
		<VideoConfig camera-parameter="../data/camera_para.dat"/>
		<CursesConfig headerline="Supder Duper Server"/>
	</configuration>
	<!-- Two markers to track each side of the pip, in the workstations users manual space -->
	<CursesSink comment="pip">
		<NetworkSink name="Pip" number="1">
			<EventTransformation translation="0.04 0 0.1">
				<EventVirtualTransformation rotation="-0.70710678 0 0 0.70710678">
					<EventVirtualTransformation rotation="0 0 -0.70710678 0.70710678">
						<VideoSource tag-file="test.tag" vertex="20 20 20 20 20 20 20 20 20"/>
					</EventVirtualTransformation>
				</EventVirtualTransformation>
			</EventTransformation>
		</NetworkSink>
	</CursesSink>
	<!-- this station just puts the camera into the right position -->
	<CursesSink comment="camera">
		<NetworkSink name="camera" number="2">
			<EventTransformation rotation="1 0 0 0">
				<TestSource/>
			</EventTransformation>
		</NetworkSink>
	</CursesSink>
	<!-- this station tracks the pen ( also two sided ) -->
	<CursesSink comment="pen">
		<NetworkSink name="pen" number="3">
			<EventTransformation translation="0 0 0.1">
				<EventVirtualTransformation translation="0.05 0.2 0"/>
			</EventTransformation>
		</NetworkSink>
	</CursesSink>
</OpenTracker>
